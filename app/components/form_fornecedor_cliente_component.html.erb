<%= form_with(model: @model) do |form| %>
    <% if @model.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@model.errors.count, "error") %> confira os erros:</h2>
  
        <ul>
          <% @model.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div>
      <%= form.label :nome, style: "display: block" %>
      <%= render InputRedComponent.new(form, :nome) %>
    </div>
  
    <div>
      <%= form.label :email, style: "display: block" %>
      <%= render InputRedComponent.new(form, :email) %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  